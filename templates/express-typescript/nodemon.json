{
  "watch": ["src/**/*.ts"],
  "ignore": [".git", "node_modules/**/node_modules", "dist"],
  "verbose": true,
  "script": "src/index.ts",
  "delay": "800",
  "execMap": {
    "ts": "node -r ts-node/register/transpile-only"
  },
  "signal": "SIGHUP",
  "env": {
    "TS_NODE_FAST": true,
    "TS_NODE_TRANSPILE_ONLY": true
  }
}
